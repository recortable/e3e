<h3><%=  t(:titulo, :scope => [:encuesta, :equipo]) %></h3>


<p class="info"><%=  t(:fuentes, :scope => [:encuesta, :equipo]) %></p>
<table>
  <thead><tr>
      <td></td><% Survey::EQUIP_SERVICIOS.each do |service| %><td>
          <%= t(service, :scope => [:encuesta, :equipamiento]) %>
        </td><%  end -%>
  </tr></thead><tbody>
    <% Survey::EQUIP_FUENTES.each do |source| %>
      <tr class="<%= cycle :odd, :even %> "><td class="name"><%= t(source, :scope => [:encuesta, :equipamiento]) %></td>
