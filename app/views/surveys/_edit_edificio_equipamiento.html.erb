<script type="text/javascript">
  jQuery(function($) {

    $.rule("caldera", $.disable("#si_caldera"), $.OR($.checked("#survey_equip_agua_caldera_tipo_notengo"),
    $.not_checked("#survey_equip_agua_tipo_caldera")));


    $.rule("paneles", $.disable("#si_paneles"), $.OR($.checked("#survey_equip_agua_caldera_tipo_notengo"),
    $.not_checked("#survey_equip_agua_solar_s")));

    $.rule("agua", $.disable(".agua"),
    $.checked("#survey_equip_agua_caldera_tipo_notengo"));

    $.rule("calefaccion", $.disable(".calefaccion"),
    $.checked("#survey_equip_calefaccion_caldera_tipo_notengo"));

    $.rule("misma_caldera", $.enable("#misma_caldera"),
    $.AND($.checked("#survey_equip_calefaccion_tipo_caldera"), $.checked("#survey_equip_agua_tipo_caldera")));

    $.rule("bomba_calor", $.checked("#survey_equip_calefaccion_tipo_bomba"), $.enable("#si_bomba"));

    $("#equip_agua_tipo input").fires("agua", "caldera", "paneles");
    $("#equip_agua_paneles input").fires("paneles");
    $("#equip_agua_dispositivo_tipo input").fires("caldera", "misma_caldera");
    $("#equip_calefaccion_dispositivo_tipo input").fires("misma_caldera", "bomba_calor");
    $("#equip_calefaccion_tipo input").fires("calefaccion");
  });
</script>




