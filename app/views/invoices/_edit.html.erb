
<% content_for :header do %>
  <script type="text/javascript">
    var barColor = "<%= @bar_color %>";
    (function($) {
      $(function() {
        var vals = []
        $("#dataset .data").each(function() {
          vals.push(parseInt($(this).val()));
        });

        $("#chart").ichart({data : {values: vals}});
      });
    })(jQuery);
  </script>

  <%= javascript_include_tag 'jquery.ichart' %>

<% end %>

